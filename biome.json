{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false,
    "defaultBranch": "develop"
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["node_modules/*", "build/", "*.test.ts", "test/*", "packages/*", "*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules/*", "build/", "*.test.ts", "test/*", "packages/*", "*.json"],
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off",
        "noThisInStatic": "info",
        "noForEach": "off",
        "noBannedTypes": "info",
        "noUselessUndefinedInitialization": "error"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "performance": {
        "noBarrelFile": "info",
        "noReExportAll": "info",
        "useTopLevelRegex": "info"
      },
      "style": {
        "noInferrableTypes": "off",
        "useExportType": "info",
        "useImportType": "info",
        "useEnumInitializers": "info",
        "useShorthandFunctionType": "info",
        "noUnusedTemplateLiteral": "info",
        "noUselessElse": "warn",
        "useNamingConvention": "off",
        "noYodaExpression": "info"
      },
      "suspicious": {
        "noImplicitAnyLet": "warn",
        "noConsole": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
